{{>header}}
<section class="login">
         {{#each errors}}
    <span style="color:red;font-weight: bolder; font-size:30px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-style:oblique;">{{this}}</span>
        {{/each}} 
    <div class="form"> 
    <form method="post" action="/Login">
        <h1>Already a Member?</h1>

        <div class = "input">
        <label for = "email"><b>Email</b></label>
        <input type="text" id = "email" placeholder="Email" name="email" value="{{values.email}}">
        </div>
        {{#if validationMessages.email}}
        <span style="color:red; font-weight: bolder; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-style:oblique;">{{validationMessages.email}}<br><br></span>
        {{/if}}
        <div class = "input">
        <label for ="password"><b>Password</b></label>
        <input type="password" id="password" placeholder="Password"  name="password" value="{{values.password}}" >
        </div>
         {{#if validationMessages.password}}
        <span style="color:red; font-weight: bolder; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-style:oblique;">{{validationMessages.password}}<br><br></span>
        {{/if}}
        <div class="checkbox">
        <label for="checkbox" >
        <input type="checkbox" value = "clerk"> clerk </label>
        </div>
        <input type="submit" class = "btn" value = "LOG IN"/><br/>
    </form>
    </div>

</section>

{{>footer}}